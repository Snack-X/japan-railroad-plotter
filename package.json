{
  "name": "japan-railroad-plotter",
  "version": "2.0.0",
  "description": "Japan Railroad Plotter",
  "author": "Snack <korsnack@korsnack.kr>",
  "license": "MIT",
  "scripts": {
    "preview-py2": "python -m SimpleHTTPServer",
    "preview-py3": "python3 -m http.server",
    "watch": "concurrently -n JS,CSS 'npm run watch-js' 'npm run watch-css'",
    "build": "npm run build-js && npm run build-css",
    "build-js": "webpack --mode production",
    "watch-js": "webpack --watch --mode development",
    "build-css": "node-sass src/scss/app.scss --output-style compressed dist/css/app.css",
    "watch-css": "node-sass src/scss/app.scss --watch --output-style expanded dist/css/app.css"
  },
  "dependencies": {
    "file-saver": "^1.3.8",
    "lz-string": "^1.4.4",
    "mapshaper": "^0.4.91",
    "topojson-client": "^3.0.0",
    "umbrellajs": "^3.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^3.6.1",
    "node-sass": "^4.9.3",
    "webpack": "^4.16.5",
    "webpack-cli": "^2.1.5"
  }
}
